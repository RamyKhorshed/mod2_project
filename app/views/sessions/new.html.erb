<img class="responsive-img" src="https://i.imgur.com/V9InlE8.jpg">


<div class="container">
  <h3 class="form-welcome-heading" >Welcome to TrackSuite</h3>
  <h4 class="form-signin-heading">Sign In:</h4>
  <%= form_tag "/sessions", method: "post" , :class => 'form-signin' do %>
    <%= label_tag(:username, "Username:") %>
    <%= text_field_tag(:username) %><br>
    <%= label_tag(:password, "Password:") %>
    <%= password_field_tag(:password) %><br>
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
        <i class="material-icons right">send</i>
      </button>
    <% end %>
  <p> Not registered yet? <a href="/users/new"> Sign up here</a></p>
</div>

<style>
body {
    background-color: papayawhip;
}
</style>
