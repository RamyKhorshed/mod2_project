<div class="container">
  <h2 class="form-signin-heading">Welcome to TrackSuite</h2>
  <h3 class="form-signin-heading">Sign In:</h3>
  <%= form_tag "/sessions", method: "post" , :class => 'form-signin' do %>
    <%= label_tag(:username, "Username:") %>
    <%= text_field_tag(:username) %><br>
    <%= label_tag(:password, "Password:") %>
    <%= password_field_tag(:password) %><br>
    <%= submit_tag("submit") %>
    <% end %>
  <p> Not registered yet? <a href="/users/new"> Sign up here</a></p>
</div>
